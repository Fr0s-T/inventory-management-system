<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ViewsControllers.ProductsController">
   <children>
      <Pane layoutX="14.0" prefHeight="90.0" prefWidth="944.0" style="-fx-background-color: grey;">
         <children>
            <HBox layoutY="-5.0" prefHeight="100.0" prefWidth="252.0">
               <children>
                  <ImageView fitHeight="67.0" fitWidth="53.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Icons/clothes.png" />
                     </image>
                  </ImageView>
                  <TextField prefHeight="26.0" prefWidth="185.0" promptText="Search..." />
               </children>
            </HBox>
         </children>
      </Pane>
      <TableView fx:id="ProductsTable" layoutX="1.0" layoutY="92.0" prefHeight="304.0" prefWidth="952.0">
        <columns>
            <TableColumn fx:id="pictureColumn" prefWidth="100.0" text="Picture" />
            <TableColumn fx:id="itemCodeColumn" prefWidth="75.0" text="Item Code" />
            <TableColumn fx:id="colorColumn" prefWidth="75.0" text="Color" />
            <TableColumn fx:id="quantityColumn" prefWidth="75.0" text="Quantity" />
            <TableColumn fx:id="sizeColumn" prefWidth="75.0" text="Size" />
            <TableColumn fx:id="sectionColumn" prefWidth="75.0" text="Section" />
            <TableColumn fx:id="shipmentDetailsIDColumn" prefWidth="120.0" text="Shipment Details ID" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
