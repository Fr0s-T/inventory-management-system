            <HBox layoutY="211" prefHeight="189" prefWidth="600">
               <children>
                  <VBox prefHeight="200" prefWidth="100" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="locationlabel" prefHeight="58" prefWidth="210" styleClass="warehouse-label" text="Location" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200" prefWidth="100" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="manegerlabel" prefHeight="58" prefWidth="210" styleClass="warehouse-label" text="Manager" />
                     </children>
                  </VBox>
                  <VBox prefHeight="190" prefWidth="70" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="capacitylabel" prefHeight="58" prefWidth="210" styleClass="warehouse-label" text="Capacity" />
                     </children>
                  </VBox>
