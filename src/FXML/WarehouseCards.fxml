<AnchorPane fx:id="card" prefHeight="400" prefWidth="600" styleClass="warehouse-card" stylesheets="@../StyleSheets/WarehouseCards.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.WarehouseCards">
   <children>
